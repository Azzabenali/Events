{% extends 'base_admin.html.twig' %}

{% block title %}Nouveau Ticket - Administration{% endblock %}

{% block page_title %}Ajouter un ticket{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 0 auto;">
        <h2 style="margin-bottom: 20px;">Créer un nouveau ticket</h2>

        {{ include('ticket/_form.html.twig') }}

        <div style="margin-top: 30px;">
            <button type="submit" class="btn btn-primary" form="ticket_form">Enregistrer</button>
            <a href="{{ path('app_ticket_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}