{% extends 'base_admin.html.twig' %}

{% block title %}Tickets - Administration{% endblock %}

{% block page_title %}Gestion des Tickets{% endblock %}

{% block body %}
    <div style="margin-bottom: 25px;">
        <a href="{{ path('app_ticket_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Ajouter un ticket
        </a>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.id }}</td>
                    <td>{{ ticket.name }}</td>
                    <td>{{ ticket.price ? ticket.price ~ ' €' : '-' }}</td>
                    <td>
                        <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}" class="btn btn-secondary">Voir</a>
                        <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-primary">Modifier</a>
                        {{ include('ticket/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" style="text-align: center; padding: 20px;">Aucun ticket trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}