{% extends 'base_admin.html.twig' %}

{% block title %}Modifier Utilisateur - Administration{% endblock %}

{% block page_title %}Modifier un utilisateur{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 0 auto;">
        <h2 style="margin-bottom: 20px;">Modifier l'utilisateur</h2>

        {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <div style="margin-top: 30px;">
            <button type="submit" class="btn btn-primary" form="user_form">Mettre à jour</button>
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>

        <div style="margin-top: 40px;">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}