{% extends 'base_admin.html.twig' %}

{% block title %}Lieux - Administration{% endblock %}

{% block page_title %}Gestion des Lieux{% endblock %}

{% block body %}
    <div style="margin-bottom: 25px;">
        <a href="{{ path('app_lieu_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Ajouter un lieu
        </a>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for lieu in lieux %}
                <tr>
                    <td>{{ lieu.id }}</td>
                    <td>{{ lieu.nom }}</td>
                    <td>{{ lieu.adresse }}</td>
                    <td>
                        <a href="{{ path('app_lieu_show', {'id': lieu.id}) }}" class="btn btn-secondary">Voir</a>
                        <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}" class="btn btn-primary">Modifier</a>
                        {{ include('lieu/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" style="text-align: center; padding: 20px;">Aucun lieu trouv√©.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}