{% extends 'base_admin.html.twig' %}

{% block title %}Modifier Catégorie - Administration{% endblock %}

{% block page_title %}Modifier une catégorie{% endblock %}

{% block body %}
    <div style="max-width: 600px; margin: 0 auto;">
        <h2 style="margin-bottom: 20px;">Modifier la catégorie</h2>

        {{ include('category/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <div style="margin-top: 30px;">
            <button type="submit" class="btn btn-primary" form="category_form">Mettre à jour</button>
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>

        <div style="margin-top: 40px;">
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}