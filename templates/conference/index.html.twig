{% extends 'base_admin.html.twig' %}

{% block title %}Conférences - Administration{% endblock %}

{% block page_title %}Gestion des Conférences{% endblock %}

{% block body %}
    <div style="margin-bottom: 25px;">
        <a href="{{ path('app_conference_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Ajouter une conférence
        </a>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for conference in conferences %}
                <tr>
                    <td>{{ conference.id }}</td>
                    <td>{{ conference.nom }}</td>
                    <td>{{ conference.description }}</td>
                    <td>{{ conference.date ? conference.date|date('d/m/Y à H:i') : 'Non défini' }}</td>
                    <td>
                        <a href="{{ path('app_conference_show', {'id': conference.id}) }}" class="btn btn-secondary">Voir</a>
                        <a href="{{ path('app_conference_edit', {'id': conference.id}) }}" class="btn btn-primary">Modifier</a>
                        {{ include('conference/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center; padding: 20px;">Aucune conférence trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}