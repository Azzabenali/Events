{% extends 'base_admin.html.twig' %}

{% block title %}Modifier Événement - Administration{% endblock %}

{% block page_title %}Modifier un événement{% endblock %}

{% block body %}
    <div style="max-width: 900px; margin: 0 auto;">
        <h2 style="margin-bottom: 20px;">Modifier l'événement</h2>

        {{ include('event/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <div style="margin-top: 30px;">
            <button type="submit" class="btn btn-primary" form="event_form">Mettre à jour</button>
            <a href="{{ path('app_event_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>

        <div style="margin-top: 40px;">
            {{ include('event/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}